@model MuktoBangla.Model.ViewModels.AddTagRequest

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <div class="container">

        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-2">
                <p>1/2</p>
            </div>
            <form asp-action="AddTag">
                <div class="col col-lg-6 e-bigger" style="background-color:white">
                    <div class="container">
                        <h4>Add New Tag and descriptions</h4>
                    </div>
                    <div class="control-section">
                        <div class="control_wrapper_Tag TextBox-control-section container">
                            <ejs-textbox width="320" id="smaller-textbox" ejs-for="Name" placeholder="Enter Tag Name" cssClass="e-small" floatLabelType="Auto"></ejs-textbox>
                            
                        </div>
                    </div>
                    <div class="control-section mt-3">
                        <div class="control_wrapper TextArea-control-section container">
                            <ejs-textarea width="380" id="textArea" placeholder="Enter your comments" ejs-for="TagDescription"  showClearButton="true" floatLabelType="Auto"></ejs-textarea>
                            <span asp-validation-for="TagDescription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="control-section container mt-3">
                        <ejs-button id="AddTagButton" content="Button"></ejs-button>
                    </div>
                </div>
            </form>
            <div class="col col-lg-4">
                4
            </div>
        </div>

    </div>
}
<style>
    /* To change the background-color and text-color for textarea */
    .e-input-group,
    .e-float-input,
    .e-float-input.e-input-group { /* csslint allow: adjoining-classes */
        background: lightgray;
        color: green;
    }

        /* To change the border-color of the textarea */
        .e-input-group:not(.e-success):not(.e-warning):not(.e-error):not(.e-float-icon-left),
        .e-input-group:hover:not(.e-success):not(.e-warning):not(.e-error):not(.e-float-icon-left) { /* csslint allow: adjoining-classes */
            border-color: #0800ff;
        }
</style>