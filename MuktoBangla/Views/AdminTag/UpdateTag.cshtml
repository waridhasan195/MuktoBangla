@model MuktoBangla.Model.ViewModels.UpdateTagRequest

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-2">
                
            </div>
            <form asp-controller="AdminTag" asp-action="UpdateTag" method="post">
                <div class="col col-lg-6 e-bigger" style="background-color:white">
                    <input type="hidden" name="Id" asp-for="@Model.Id" value="@Model.Id" />
                    <div class="container">
                        <h4>Update Tag and descriptions</h4>
                    </div>
                    <div class="control-section">
                        <div class="control_wrapper_Tag TextBox-control-section container">
                            <ejs-textbox width="320" id="smaller-textbox" ejs-for="Name" placeholder="Enter Tag Name" cssClass="e-small" floatLabelType="Auto"></ejs-textbox>
                            <span asp-validation-for="Name" class="text-danger" style="font-size:small"></span>
                        </div>
                    </div>
                    <div class="control-section mt-3">
                        <div class="control_wrapper TextArea-control-section container">
                            <ejs-textarea width="380" id="textArea" placeholder="Enter your comments" ejs-for="TagDescription" showClearButton="true" floatLabelType="Auto"></ejs-textarea>
                            <span asp-validation-for="TagDescription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="control-section container mt-3">
                        <ejs-button id="AddTagButton" content="Update" type="submit"></ejs-button>
                    </div>
                </div>
            </form>
            <div class="col col-lg-4">
                
            </div>
        </div>

    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}